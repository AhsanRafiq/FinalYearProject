
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Set Paper</title>
    <!-- Bootstrap Core CSS -->

    <link href="@Url.Content("~/Content/CSS/bootstrap.min.css")" rel="stylesheet" />
    <!-- Custom CSS -->

    <link href="@Url.Content("~/Content/CSS/sb-admin.css" )" rel="stylesheet" />
    <!-- Morris Charts CSS -->

    <link href="@Url.Content("~/Content/CSS/morris.css")" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="@Url.Content("~/Font/FontAwesome/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/CSS/bootstrap-select.min.css")" rel="stylesheet" />


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <link rel="stylesheet" href="f"/>
    <![endif]-->
    <script src="@Url.Content("~/Ajax Scripts/Paper.js")"></script>

</head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="teacher.html">Teacher Panel</a>
            </div>
            <!-- Top Menu Items -->
      
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="active">
                        <a href="@Url.Action("GetPaper","Paper")"><i class="fa fa-fw fa-table"></i>Create Paper</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","TeacherDashboard")"><i class="fa fa-fw fa-dashboard"></i>Back Dashboard</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Create Paper
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> Dashboard
                            </li>
                        </ol>
                    </div>
                </div>

                <!-- /.row -->

                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <h3>
                                <span class="label label-danger">Session :  @ViewBag.Session</span>
                            </h3>
                        </div>
                        <div class="col-md-4">
                            <h3>
                                <span class="label label-danger">Semester : @ViewBag.Semester </span>
                            </h3>
                        </div>
                        <div class="col-md-4">
                            <h3>
                                <span class="label label-danger">Subject :  @ViewBag.Subject </span>
                            </h3>
                        </div>


                    </div>
                </div>

                <span hidden id="maxQuestions">@ViewBag.TotalQuestions</span>
                <span hidden id="paperId">@ViewBag.PaperId</span>
                <div class="row">
                    <div class="col-md-6">


                        <div class="form-group">

                            <h4>
                                <label id="questionNo" class="label label-primary">Question No. 1</label>

                            </h4>

                            <textarea class="form-control" rows="5" id="quesionText"></textarea>
                        </div>


                        <div class="form-group">

                            <h4>
                                <label for="marks" class="label label-primary">Marks</label>
                            </h4>

                            <input type="text" class="form-control" id="marks">
                        </div>




                        <div class="form-group">

                            <h4>
                                <span class="label label-primary">Resources</span>
                            </h4>

                            <textarea class="form-control" rows="5" id="resources"></textarea>
                        </div>

                        <div class="form-group">

                            <h4>
                                <span class="label label-primary">Answers</span>
                            </h4>

                            <br>
                            <input type="radio" name="selection" value="correct" id="correctOptionOne" checked> Correct<br>
                            <input type="text" class="form-control" rows="5" id="optionOne">
                            <input type="radio" name="selection" value="correct" id="correctOptionTwo"> Correct<br>
                            <input type="text" class="form-control" rows="5" id="optionTwo">
                            <input type="radio" name="selection" value="correct" id="correctOptionThree"> Correct<br>
                            <input type="text" class="form-control" rows="5" id="optionThree">
                            <input type="radio" name="selection" value="correct" id="correctOptionFour"> Correct<br>
                            <input type="text" class="form-control" rows="5" id="optionFour">
                            <br>


                            <div class="form-group">

                                <label>Image (If Require)</label>

                                <input type="file" name="file" id="file" class="form-control" accept="image/x-png,image/jpeg" />
                                <br />
                                <input type="button" id="uploadButton" value="Upload" onclick="UploadImage()" />
                            </div>



                            <button type="button" style="visibility:hidden" onclick="previous()" class="btn btn-success" id="previousBtn">Previous</button>
                            <span> | </span>
                            <button type="button" style="visibility:hidden" onclick="next()" class="btn btn-success" id="nextBtn">Next</button>
                            <span> | </span>
                            <input type="button" style="visibility:hidden" value="Add Question" onClick="addNext()" id="addBtn" class="btn btn-success">
                            <span> | </span>
                            <input type="button" value="Save" onClick="addQuestion()" id="saveBtn" class="btn btn-success">
                            <span> | </span>
                            <input type="button" style="visibility:hidden" value="Submit" id="submitBtn" onClick="submit()" class="btn btn-success">



                        </div>


                    </div>

                </div>
            </div>
        </div>

    </div>


    <script src="@Url.Content("~/Script/jquery.js")"></script>
    <!-- Bootstrap Core JavaScript -->

    <script src="@Url.Content("~/Script/bootstrap.min.js")"></script>

    <!-- Morris Charts JavaScript -->

    <script src="@Url.Content("~/Script/raphael.min.js")"></script>

    <script src="@Url.Content("~/Script/morris.min.js")"></script>

    <script src="@Url.Content("~/Script/morris-data.js")"></script>
    <script src="@Url.Content("~/Script/bootstrap-select.min.js")"></script>
 
    <script>validateCreatePaper();</script>
</body>
</html>
